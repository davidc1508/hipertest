@model IEnumerable<TesteHiper.Data.Model.EstoqueModel>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Estoques</h4>
                <span class="float-right"><a href="@Url.Action("Novo", "Estoque")" class="btn btn-primary"><i class="fa fa-plus">+</i></a></span>
            </div>
            <div class="card-body">
                @if(TempData["MsgChangeStatus"] != null)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <p class="alert alert-danger">
                                @TempData["MsgChangeStatus"]
                            </p>
                        </div>
                    </div>
                }
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>